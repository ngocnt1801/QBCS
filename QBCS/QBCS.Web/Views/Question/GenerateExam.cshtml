
@{
    ViewBag.Title = "GenerateExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Generate Exam</h2>

<div id="smartwizard">
    <ul>
        <li><a href="#step-1">Step 1<br /><small>Select Course</small></a></li>
        <li><a href="#step-2">Step 2<br /><small>Select Topic/Learing Outcome</small></a></li>
        <li><a href="#step-3">Step 3<br /><small>Select number of question</small></a></li>
    </ul>

    <div>
        <div id="step-1" class="">
            <div class="col-lg-5">
                <div class="row">
                    <form class="form-inline" id="searchCourse">
                        <i class="fas fa-search" aria-hidden="true"></i>
                        <input id="searchCourseValue" class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search Course" aria-label="Search Course" />
                    </form>
                </div>
                
                <div class="row">
                    <table class="table">
                        <tbody id="listCourse">                          
                                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="step-2" class=""></div>
        <div id="step-3" class="">
            <div class="container">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="easyQ">Easy question number:</label>
                        <input type="number" class="form-control" id="easyQ">
                    </div>
                    <div class="form-group">
                        <label for="normalQ">Normal question number:</label>
                        <input type="number" class="form-control" id="normalQ">
                    </div>
                    <div class="form-group">
                        <label for="hardQ">Hard question number:</label>
                        <input type="number" class="form-control" id="hardQ">
                    </div>
                </div>
            </div>
    </div>
</div>