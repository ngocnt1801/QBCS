@using QBCS.Service.ViewModel

@{
    var homeClass = "";
    var courseClass = "";
    var activitiesClass = "";
    var logClass = "";
    var userClass = "";
    //var controller = this.ViewContext.RouteData.Values["controller"].ToString();
    var controller = TempData["active"] != null ? (string)TempData["active"] : "";
    switch (controller)
    {
        case "Home":
            homeClass = "active";
            break;
        case "Activity":
            activitiesClass = "active";
            break;
        case "User":
            userClass = "active";
            break;
        case "Log":
            logClass = "active";
            break;
    }
}

