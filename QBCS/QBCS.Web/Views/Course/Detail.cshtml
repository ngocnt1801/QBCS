<div class="card shadow mb-4 col-md-12">
    <div class="card-header">
        <h3 class="m-0 font-weight-bold text-primary">Learning outcome in this course</h3>
    </div>

    <div class="card-body text-custom" style="padding-left:30px">
        <div class="row float-right">
            <a href="@Url.Action("Add", "LearningOutcome", new { courseId = Model.CourseId})" class="btn btn-primary float-right">Add new Learning Outcome</a>
        </div>
        <div class="row table-responsive">
            <table class="table table-bordered table-hover text-custom  table-striped" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Code
                        </th>
                        <th>
                            Name
                        </th>
                        <th class="text-center" style="width:20% !important">
                            Action
                        </th>
                    </tr>
                </thead>

                <tbody class="text-custom">

                    @foreach (var learningOutcome in Model.LearningOutcome)
                    {
                        <tr>
                            <td hidden></td>
                            <td>
                                @learningOutcome.Code
                            </td>
                            <td>
                                @learningOutcome.Name
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", "LearningOutcome", new { id = learningOutcome.Id })" class="btn btn-primary"><i class="fa fa-pencil-alt"></i></a>
                                <a href="@Url.Action("UpdateDisable", "Course", new { itemId = learningOutcome.Id })" class="btn btn-danger mr-1"><i class="fa fa-ban"></i></a>
                            </td>
