@model QBCS.Service.ViewModel.CourseViewModel
@using QBCS.Service.ViewModel
@{
    /**/

    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="text-align:right">
    <a href="@Url.Action("Staff_Index", "Course")"
       class="btn btn-outline-light border-dark text-custom mr-2">
        Return to Index
    </a>
</div>
<div class="card shadow mb-4">
    <div class="card-header">
        <h3 class="m-0 font-weight-bold text-primary">Detail Course</h3>
    </div>

    <div class="card-body text-custom" style="padding-left:30px">
        <div>
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-lg-7">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-lg-5">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-7">
                        @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-lg-5">
                        @Html.DisplayFor(model => model.Code)
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7">
                        <label class="control-label col-md-5">
                            Default Number Of Question
                        </label>
                    </div>
                    <div class="col-lg-5">
                        @Html.DisplayFor(model => model.DefaultNumberOfQuestion)
                    </div>
                </div>
                <div class="row float-right">
                    <a href="@Url.Action("Edit", "Course", new { itemId = Model.CourseId })" class="btn btn-primary">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
