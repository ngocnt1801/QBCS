@model IEnumerable<QBCS.Service.ViewModel.SyllabusPartialViewModel>

@{
    ViewBag.Title = "Syllabus";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-md-6">
        <div class="row mb-2">
            <div class="col-md-12">
                <button class="btn btn-primary float-right" data-toggle="modal" data-target="#create-syllabus-modal"><i class="fa fa-plus"></i> Add Syllabus</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5>List all syllabus</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered text-custom table-hover" id="dataTable" cellspacing="0">
                            <thead>
                                <tr class="text-center">
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Amount Questions</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        count++;

                                        <tr class="show-loc" data-url="@Url.Action("GetLearningOutcomes", "Course", new { syllabusId = item.Id})">
                                            <td class="text-center">
                                                @count
                                            </td>
                                            <td>
                                                @Html.DisplayFor(course => item.Name)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(course => item.Amount)
                                            </td>
                                            <td>
                                                <button class="btn btn-primary edit-syllabus" data-id="@item.Id" data-name="@item.Name" data-amount="@item.Amount"><i class="fa fa-pencil-alt"></i></button>
                                                <a href="@Url.Action("DeleteSyllabus", "Course", new { id = item.Id, courseId = TempData["CourseId"]})" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6" id="loc-container">
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="create-syllabus-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Syllabus partial</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form method="post" action="@Url.Action("CreateSyllabus", "Course")">
                <div class="modal-body form-group">
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="Amount">Amount Question:</label>
                        <input type="number" class="form-control" name="Amount">
                    </div>
                </div>
                <input type="hidden" name="CourseId" value="@TempData["CourseId"]" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<div class="modal fade" tabindex="-1" role="dialog" id="update-syllabus-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Syllabus partial</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form method="post" action="@Url.Action("UpdateSyllabus", "Course")">
                <div class="modal-body form-group">
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input type="text" class="form-control" id="sylname" name="Name" value="">
                    </div>
                    <div class="form-group">
                        <label for="Amount">Amount Question:</label>
                        <input type="number" class="form-control" id="sylamount" name="Amount" value="">
                    </div>
                </div>
                <input type="hidden" name="Id" id="sylid" value="" />
                <input type="hidden" name="CourseId" value="@TempData["CourseId"]" />

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@Scripts.Render("~/bundle/scripts/syllabus")