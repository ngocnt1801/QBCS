                <li><a href="#section-topline-2" id="section-delete"><span>Delete (<span id="total-delete">@Model.deleteNumber</span>/@Model.totalNumber)</span></a></li>
            </ul>
        </nav>
        <div class="content-wrap">
            <section id="section-topline-1">
